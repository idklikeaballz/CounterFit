<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Track -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="12dp" />
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
        </shape>
    </item>

    <!-- Secondary Progress -->
    <item android:id="@android:id/secondaryProgress">

        <clip>
            <shape>
                <size
                    android:width="8dp"
                    android:height="8dp"/>
                <corners android:radius="12dp" />

                <solid android:color="#C4C4C4" />
            </shape>
        </clip>
    </item>

    <!-- Primary Progress with padding -->
    <item
        android:id="@android:id/progress"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <clip>
            <shape>
                <corners android:radius="12dp" />
                <solid android:color="#FFA500" /> <!-- Your primary progress color -->
            </shape>
        </clip>
    </item>
</layer-list>
