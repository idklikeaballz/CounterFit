<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyActionBarTitleText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/headerbg</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Ensure windowActionBar is set to false and windowNoTitle is set to true. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Text color and hint color in the search view -->
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/colorAccent</item>

        <!-- Icon color -->
        <item name="searchIcon">@drawable/ic_search_custom</item> <!-- Custom search icon -->
        <item name="closeIcon">@drawable/ic_close_custom</item> <!-- Custom close icon -->
    </style>


    <!-- This style is optional, for further customization -->
    <style name="MySearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@drawable/search_view_query_background</item>
    </style>


</resources>