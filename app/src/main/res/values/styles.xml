<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyActionBarTitleText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/headerbg</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Ensure windowActionBar is set to false and windowNoTitle is set to true. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Customize background -->
        <item name="queryBackground">@drawable/search_view_background</item>
        <!-- Customize text color -->
        <item name="android:textColor">@color/textColor</item>
        <!-- Customize hint text color -->
        <item name="android:textColorHint">@color/hintColor</item>
        <!-- Other customizations -->
    </style>

</resources>