<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundmain"
    android:padding="0dp">

    <RadioGroup
        android:id="@+id/goalRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButtonGainWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/goal_selector"
            android:button="@null"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Gain Weight"
            android:textColor="@color/radiobuttoncolor"
            android:layout_marginBottom="34dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButtonMaintainWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/goal_selector"
            android:fontFamily="@font/inter_semibold"
            android:button="@null"
            android:gravity="center"
            android:padding="12dp"
            android:text="Maintain Weight"
            android:textColor="@color/radiobuttoncolor"
            android:layout_marginBottom="34dp"

            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButtonLoseWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/goal_selector"
            android:fontFamily="@font/inter_semibold"
            android:button="@null"
            android:textColor="@color/radiobuttoncolor"
            android:gravity="center"
            android:padding="12dp"
            android:text="Lose Weight"
            android:textSize="16sp" />

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/next_button"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/white"

        android:textSize="16sp" />
</RelativeLayout>
