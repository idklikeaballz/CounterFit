<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundmain"
    android:padding="0dp">

    <RadioGroup
        android:id="@+id/loseweightRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/LoseWeight_0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:background="@drawable/goal_selector"
            android:button="@null"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Lose 0.2 kg per week"
            android:textColor="@color/radiobuttoncolor"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/LoseWeight_0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/goal_selector"
            android:button="@null"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Lose 0.5 kg per week"
            android:textColor="@color/radiobuttoncolor"
            android:textSize="16sp" />

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loseweightRadioGroup"
        android:layout_marginTop="398dp"
        android:background="@drawable/next_button"
        android:gravity="center"
        android:text="Next"

        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>
