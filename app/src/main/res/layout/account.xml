<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#142C59">

    <!-- Email TextInputLayout -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutEmailUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:boxStrokeColor="@color/colorAccent"
        app:boxStrokeWidth="2dp"
        app:boxBackgroundColor="@android:color/transparent"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:hintEnabled="true"
        app:hintAnimationEnabled="true"
        app:hintTextColor="@color/colorAccent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/emailEditTextUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:textColorHint="#A2D9FF" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password TextInputLayout -->
<com.google.android.material.textfield.TextInputLayout
android:id="@+id/textInputLayoutPasswordUpdate"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="4dp"
app:boxStrokeColor="@color/colorAccent"
app:boxStrokeWidth="2dp"
app:boxBackgroundColor="@android:color/transparent"
app:boxCornerRadiusTopStart="8dp"
app:boxCornerRadiusTopEnd="8dp"
app:boxCornerRadiusBottomStart="8dp"
app:boxCornerRadiusBottomEnd="8dp"
app:hintEnabled="true"
app:hintAnimationEnabled="true"
style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/PasswordEditTextUpdate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Password"
    android:inputType="textPassword"
    android:textColor="#FFFFFF"
    android:textColorHint="#A2D9FF" />

<!-- Password Requirement TextView -->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="10 characters minimum"
    android:textColor="#A2D9FF"
    android:textSize="14sp"
    android:layout_gravity="end" />
</com.google.android.material.textfield.TextInputLayout>

    <!-- Confirm Password TextInputLayout -->
<com.google.android.material.textfield.TextInputLayout
android:id="@+id/textInputLayoutConfirmPasswordUpdate"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="16dp"
android:padding="4dp"
app:boxStrokeColor="@color/colorAccent"
app:boxStrokeWidth="2dp"
app:boxBackgroundColor="@android:color/transparent"
app:boxCornerRadiusTopStart="8dp"
app:boxCornerRadiusTopEnd="8dp"
app:boxCornerRadiusBottomStart="8dp"
app:boxCornerRadiusBottomEnd="8dp"
app:hintEnabled="true"
app:hintAnimationEnabled="true"
style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/ConfirmPasswordUpdate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Confirm Password"
    android:inputType="textPassword"
    android:textColor="#FFFFFF"
    android:textColorHint="#A2D9FF" />
</com.google.android.material.textfield.TextInputLayout>

    <!-- Spacer for layout balance -->
<View
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1" />

    <!-- Update Button -->
<Button
    android:id="@+id/Update"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimary"
    android:text="Update"
    android:textColor="#FFFFFF"
    android:layout_marginBottom="16dp" />
</LinearLayout>
