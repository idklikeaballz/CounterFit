<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundmain"
    android:padding="16dp"
    tools:context=".SignUp1">

    <RadioGroup
        android:id="@+id/genderGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp">

        <RadioButton
            android:id="@+id/maleRadioButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_selector"
            android:button="@null"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:text="Male" />

        <RadioButton
            android:id="@+id/femaleRadioButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_selector"
            android:button="@null"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:text="Female" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/genderGroup"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Age:"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/AgeEdit"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/genderGroup"
        android:layout_marginTop="57dp"
        android:background="@drawable/cool_textborder"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:hint="Age"
        android:inputType="number"
        android:textColor="#A1D9FF"
        android:textColorHighlight="#A1D9FF"
        android:textColorHint="#A1D9FF" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AgeEdit"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Weight:"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/WeightEdit"
        android:layout_width="385dp"
        android:layout_height="42dp"
        android:layout_below="@id/AgeEdit"
        android:layout_marginTop="57dp"
        android:background="@drawable/cool_textborder"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:hint="Weight (kg)"
        android:inputType="numberDecimal"
        android:textColor="#A1D9FF"
        android:textColorHighlight="#A1D9FF"
        android:textColorHint="#A1D9FF" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WeightEdit"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Height:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/HeightEdit"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/WeightEdit"
        android:layout_marginTop="57dp"
        android:background="@drawable/cool_textborder"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:hint="Height (m)"
        android:inputType="numberDecimal"
        android:textColor="#A1D9FF"
        android:textColorHighlight="#A1D9FF"
        android:textColorHint="#A1D9FF" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/HeightEdit"
        android:layout_marginTop="181dp"
        android:background="@drawable/next_button"
        android:fontFamily="@font/inter_semibold"
        android:text="Next"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Gender:"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>
